<%= form_with model: author do |form| %>
  <div class="input-group mb-3">
    <%= form.label :first_name, :class => 'input-group-text' %><br />
    <%= form.text_field :first_name, :class => 'form-control' %>
  </div>
  <%= render "error", author: author, field: :first_name %>

  <div class="input-group mb-3">
    <%= form.label :last_name, :class => 'input-group-text' %><br />
    <%= form.text_field :last_name, :class => 'form-control' %>
  </div>
  <%= render "error", author: author, field: :last_name %>

  <div class="input-group mb-3">
    <%= form.label :date_of_birth, :class => 'input-group-text' %><br />
    <%= form.date_field :date_of_birth, :class => 'form-control' %>
  </div>
  <%= render "error", author: author, field: :date_of_birth %>

  <div class="input-group mb-3">
    <%= form.label :email, :class => 'input-group-text' %><br />
    <%= form.email_field :email, :class => 'form-control' %>
  </div>
  <%= render "error", author: author, field: :email %>

  <div class="input-group mb-3">
    <%= form.submit :class => 'btn-success rounded p-1 px-2' %>
  </div>
<% end %>
