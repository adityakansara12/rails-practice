<h1>Products</h1>

<table class="table table-bordered w-50 m-auto mb-2">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
            <tr>
                <td><%= product.id %></td>
                <td><%= link_to product.title, product_path(product) %></td>
                <td><%= link_to "Edit", edit_product_path(product), :class => "btn btn-primary m-0" %>
                    <%= link_to "Delete", product_path(product), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                    }, :class => "btn btn-primary m-0" %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<p class="btn btn-primary"><%= link_to  "New Product", new_product_path %></p>
