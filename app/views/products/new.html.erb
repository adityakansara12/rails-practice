<h1>New Product</h1>

<%= form_with model: @product do |form| %>
    <div class="input-group mb-3">
        <%= form.label :title, :class => 'input-group-text' %><br />
        <%= form.text_field :title, :class => 'form-control' %>
    </div>

    <div class="input-group mb-3">
        <%= form.label :description, :class => 'input-group-text' %><br />
        <%= form.text_area :description, :class => 'form-control' %>
    </div>

    <div class="input-group mb-3">
        <%= form.submit :class => 'btn-primary rounded p-1 px-2' %>
    </div>

<% end %>
