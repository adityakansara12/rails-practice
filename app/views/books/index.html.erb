<h1>Books</h1>

<table class="table table-bordered w-50 m-auto mb-2">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td><%= book.id %></td>
                <td><%= link_to book.name, book_path(book) %></td>
                <td><%= link_to "Edit", edit_book_path(book), :class => "btn btn-primary m-0" %>
                    <%= link_to "Delete", book_path(book), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                    }, :class => "btn btn-primary m-0" %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<p class="btn btn-primary"><%= link_to  "New Book", new_book_path %></p>
