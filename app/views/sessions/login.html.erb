<h1>Login</h1>
<%= form_tag '/login' do %>
  <div class="input-group mb-3">
    <label class="input-group-text" >Username</label><br />
    <%= text_field_tag :username, nil, class: 'form-control' %>
  </div>

  <div class="input-group mb-3">
    <label class='input-group-text' >Password</label><br />
    <%= password_field_tag :password, nil, class: 'form-control'  %>
  </div>

  <div class="input-group mb-3">
    <%= submit_tag :login, class: 'btn-success rounded p-1 px-2' %>
  </div>
<% end %>
